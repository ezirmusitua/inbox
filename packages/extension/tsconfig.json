{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "outDir": "./build",
    "paths": {
      "@inbox/proxy": [
        "../proxy/lib"
      ],
      "@inbox/shared": [
        "../shared/lib"
      ]
    },
    "jsx": "react-jsx",
    "noEmit": true,
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "build",
    "node_modules"
  ],
  "references": [
    {
      "path": "../proxy"
    },
    {
      "path": "../shared"
    }
  ]
}